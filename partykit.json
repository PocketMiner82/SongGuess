{
  "$schema": "https://www.partykit.io/schema.json",
  "name": "songguess",
  "main": "src/server/server.ts",
  "compatibilityDate": "2025-11-22",
  "compatibilityFlags": ["global_fetch_private_origin", "nodejs_compat"],
  "serve": {
    "path": "public",
    "build": {
      "entry": [
        "src/client/index.tsx",
        "src/client/room.tsx",
        "src/client/transferPlaylist.tsx"
      ]
    }
  },
  "build": {
    "command": "npm run build",
    "watch": [
      "src",
      "public/*.html"
    ]
  }
}
