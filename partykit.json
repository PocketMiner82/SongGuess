{
  "$schema": "https://www.partykit.io/schema.json",
  "name": "songguess",
  "main": "src/server/Server.ts",
  "parties": {
    "api": "src/server/api/API.ts"
  },
  "compatibilityDate": "2025-11-22",
  "compatibilityFlags": ["global_fetch_private_origin"],
  "serve": {
    "path": "public",
    "build": {
      "entry": [
        "src/client/index.tsx",
        "src/client/room.tsx",
        "src/client/transferPlaylist.tsx",
        "src/client/admin.tsx"
      ]
    }
  },
  "build": {
    "command": "npm run build",
    "watch": [
      "src"
    ]
  }
}
